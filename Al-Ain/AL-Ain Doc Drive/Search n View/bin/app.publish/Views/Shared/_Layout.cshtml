                    {

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DocumentSearch", "Document")">
                                <i class="fa fa-search"></i> Document Search
                            </a>
                        </li>

                    }
                    else if (PowerAdmin)
                    {
