                            <a class="nav-link" href="@Url.Action("DocCreation", "Document")">
                                <i class="fa fa-plus-square"></i> Document Creation
                            </a>
                        </li>*@

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DocumentSearch", "Document")">
                                <i class="fa fa-search"></i> Document Search
                            </a>
                        </li>



