            </nav>
         
        </div>
        <main class="main">
            <div class="container-fluid">
                <div id="ui-view" class="p-t-20">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="app-footer">
        <div class="w-100">
            <div class="mr-3 float-right">
                <a href="https://www.backofficeme.com/">Backoffice FZ LLC</a>
