@model Search_n_View.ViewModels.ManageAccessGroupModel
@{
    ViewBag.Title = "Manage Access Group";
}

@section styles {
    <style>
        td .btn-primary, .btn-danger {
            padding: .175rem .55rem;
        }
    </style>
}
<div>
    <div class="animated fadeIn">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-check-square"></i> Access Rights
                <div class="card-header-actions">
                    <a class="btn btn-info" href="@Url.Action("Create", "AccessGroup")">
                        <i class="fa fa-plus"></i> Add Access Rights
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped datatable">
                        <thead>
                            <tr>
                                <th class="text-center">Name</th>
                                <th class="text-center">Code</th>
                                <th class="text-center">View</th>
                                <th class="text-center">Upload</th>
                                <th class="text-center">Download</th>
                                <th class="text-center">Email</th>
                                @*<th class="text-center">Print</th>*@
                                <th class="text-center">AddNote</th>
                                <th class="text-center">AddedBy</th>
                                <th class="text-center">AddedDate</th>
                                <th class="no-sort text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>

    
                                @for(int i = 0;i< Model.Groups.Count();i++)
                                {
                                    <tr>
                                       
                                            <td class="text-center">@Model.Groups[i].Name</td>
                                      
                                       
                                            <td class="text-center">@Model.Groups[i].AgShortName</td>
                                       
                                        @if (Model.Groups[i].CanView)
                                        {
                                            <td class="text-center">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        @if (Model.Groups[i].CanUpload)
                                        {
                                            <td class="text-center">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        @if (Model.Groups[i].CanDownload)
                                        {
                                            <td class="text-center">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        @if (Model.Groups[i].CanEmail)
                                        {
                                            <td class="text-center">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        @*@if (Model.Groups[i].CanPrint)
                                        {
                                            <td class="text-center">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }*@
                                        @if (Model.Groups[i].CanAddNote)
                                        {
                                            <td class="text-center">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        @if (Model.Groups[i].AddedBy != null)
                                        {
                                            <td class="text-center">@Model.Groups[i].AddedBy</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        @if (Model.Groups[i].AddedBy != null)
                                        {
                                            <td class="text-center">@Model.Groups[i].AddedTime.ToString("dd MMM yyyy HH:mm:ss")</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        <td class="text-center">
                                            <a class="btn btn-primary" title="Edit" href="@Url.Action("Edit", "AccessGroup", new { GroupCode = Model.Groups[i].AgShortName })">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
    </div>
</div>
