@model Search_n_View.ViewModels.ManageDocumentTypeViewModel
@{
    ViewBag.Title = "Manage Branches";
}

@section styles {
    <style>
        td .btn-primary, .btn-danger {
            padding: .175rem .55rem;
        }
    </style>
}
<div>
    <div class="animated fadeIn">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-list-alt"></i> Branches
                <div class="card-header-actions">
                    <a class="btn btn-info" href="@Url.Action("Create", "DocumentType")">
                        <i class="fa fa-plus"></i> Add Branch
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-responsive-sm datatable">
                    <thead>
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-center">Pharmacy</th>
                            <th class="text-center">AddedBy</th>
                            <th class="text-center">AddedDate</th>
                            <th class="no-sort text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var Item in Model.DocumentType)
                        {
                        <tr>

                            <td class="text-center">@Item.Name</td>
                            <td class="text-center">@Item.ItemTypeName</td>
                            <td class="text-center">@Item.CreatedBy</td>
                            <td class="text-center">@Item.AddedTime.ToString("dd MMM yyyy HH:mm")</td>

                            <td class="text-center">
                                <a class="btn btn-primary" title="Edit" href="@Url.Action("Edit", "DocumentType", new { Id = Item.Id })">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
